extends layout_modular

block content
  .gral-hero.d-flex.align-items-center.justify-content-center.text-center
    .gral-hero-content
      h1.text-center.px-4.pt-5 Alta de Paciente

      // 🔍 Formulario para buscar paciente por DNI (sin method GET para evitar recarga)
      form#buscarPacienteForm
        .mb-3
          label(for='busqueda') Buscar Paciente (DNI, nombre o apellido)
          input#busqueda.form-control(type='text', name='busqueda', required)

        button.btn.btn-primary.mb-4(type='submit')
          i.fas.fa-search.me-1
          | Buscar

      // 📋 Resultado dinámico (paciente + admisión + formulario alta)
      #resultadoBusqueda


    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js")
    link(rel="stylesheet", href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css") 
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(src="/js/altaPaciente.js")
