extends layout_modular

block content
  //– Hero de pantalla completa
  .login-hero.d-flex.align-items-center.justify-content-center.text-center
    .login-hero-content
      h1.text-white.mb-2 Bienvenido de nuevo
      p.text-white.lead.mb-4 Accede con tu cuenta para continuar

      //– Tarjeta cuadrada gracias a aspect-ratio
      .card.login-card.shadow
        .card-body.d-flex.flex-column.justify-content-center
          h4.text-center.mb-4 Iniciar sesión
          form(action="/login" method="POST")
            .mb-3
              label.form-label(for="usuario") Usuario
              input.form-control(type="text" name="usuario" id="usuario" required placeholder="Usuario")
            .mb-3
              label.form-label(for="password") Contraseña
              input.form-control(type="password" name="password" id="password" required placeholder="Contraseña")
            button.btn.btn-primary.mt-auto(type="submit") Ingresar

          if error
            .alert.alert-danger.mt-3.text-center= error
