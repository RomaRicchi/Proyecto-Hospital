extends layout_modular.pug

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-4
        .card.shadow
          .card-body
            h4.text-center.mb-4 Iniciar sesión
            form(action="/login" method="POST")
              .mb-3
                label.form-label(for="usuario") Usuario
                input.form-control(type="text", name="usuario", required)
              .mb-3
                label.form-label(for="password") Contraseña
                input.form-control(type="password", name="password", required)
              button.btn.btn-primary.w-100(type="submit") Ingresar





