extends layout_modular  

block content
  h1.text-center.mb-4 Lista de Géneros

  if generos && generos.length
    .table-responsive
      table#tablaGenero.table.table-striped.table-bordered
        thead
          tr
            th ID
            th Nombre
            th Acciones
        tbody
          each genero in generos
            tr
              td #{genero.id_genero}
              td #{genero.nombre}
              td
                button.btn.btn-sm.btn-primary.me-1.edit-btn(data-id=genero.id_genero)
                  i.fas.fa-pen
                button.btn.btn-sm.btn-danger.me-1.delete-btn(data-id=genero.id_genero)
                  i.fas.fa-trash
  else
    p.text-center.text-muted No hay géneros registrados.
  
  link(rel="stylesheet", href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css")
  script(src="https://code.jquery.com/jquery-3.7.1.min.js")
  script(src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js")
  script(src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js")
  script(src="/js/generos.js")
