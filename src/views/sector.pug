extends layout_modular

block content
  h1.text-center.mb-4 Gestión de Sectores


  form(method="POST" action="/sector/agregar" class="mb-4")
    .row
      .col-md-6
        label(for="nombre") Nombre del Sector:
        input#nombre.form-control(type="text" name="nombre" required)
      .col-md-6.mt-4
        button.btn.btn-success(type="submit") Agregar

  if sectores && sectores.length
    .table-responsive
      table#tablaSector.table.table-striped.table-bordered
        thead
          tr
            th Nombre
            th Acciones
        tbody
          each sector in sectores
            tr
              td= sector.nombre
              td
                button.btn.btn-sm.btn-primary.me-1.edit-btn(data-id=sector.id_sector)
                  i.fas.fa-pen
                button.btn.btn-sm.btn-danger.me-1.delete-btn(data-id=sector.id_sector)
                  i.fas.fa-trash
  else
    p.text-center.text-muted No hay sectores registrados.

  // Librerías DataTables y jQuery
  script(src="https://code.jquery.com/jquery-3.7.1.min.js")
  script(src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js")
  script(src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js")
  link(rel="stylesheet", href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css")
  script(src="/js/sectores.js")  // JS específico para sector
