extends layout_modular

block content

  //– Hero con solo el mensaje principal
  .hero(style="background-color: #a8e6cf; padding: 4rem 1rem;")
    .container.hero-content.text-center
      h1.mt-4 Bienvenido a nuestra Clínica
      h1.display-4 Cuidamos tu salud, acompañamos tu vida
      p.lead Más de 25 años de experiencia brindando atención médica integral.

  //– Listas en paralelo
  .container.bg-white.py-5
    .row.text-center
      //– Columna de Obras Sociales
      .col-12.col-md-6
        h2 Obras sociales que recibimos:
        ul.list-unstyled
          each obra in listaObras
            li= obra

      //– Columna de Especialidades
      .col-12.col-md-6
        h2 Especialidades disponibles:
        ul.list-unstyled
          each esp in listaEsp
            li= esp

  //– Nuestros profesionales
  h2.mt-5.text-center Nuestros Profesionales
  .row.row-cols-2.row-cols-sm-3.row-cols-md-4.row-cols-lg-5.g-4.mt-3.justify-content-center
    each medico in medicos
      .col
        .card.expandible.h-100.shadow-sm.text-center.d-flex.flex-column(style="cursor: pointer; padding: 10px;")
          img.card-img-top.mx-auto.mt-3.mb-2.rounded-circle(
            src=medico.foto, 
            alt=`Foto de ${medico.nombre}`, 
            title=medico.nombre,
            style="width: 80px; height: 80px; object-fit: cover;"
          )
          .card-body.p-2.mt-auto
            h6.card-title.mb-1= medico.nombre
            p.card-text.text-muted.small= medico.especialidad
